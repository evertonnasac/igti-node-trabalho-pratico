<div class="dono-profile">

    <div class="dono-form-container">
        <div class="dono-img img-width"></div>
        <form class="dono-form" action="/dono/{{dono.proprietario_id}}" method="POST">
            <label for="nome-dono">Nome</label>
            <input type="text" name="nome" value="{{dono.dono_nome}}"/>
            <label for="fone-dono">Telefone</label>
            <input type="phone" name="telefone" value="{{dono.telefone}}"/>
            <input type="submit" value="EDITAR">
        </form>
        <form action="/dono/delete/{{dono.proprietario_id}}" method="POST">
            <input type="submit" value="EXCLUIR"/>
        </form>
    </div>

    <div class="dono-animal-area">

        <div class="dono-animais-list">
            <h2>ANIMAIS:</h2>
            {{#each animais}}
                <li><a href = "/animal/{{this.id}}" >{{this.nome}}</a></li>
            {{/each}}
        </div>
        
        
        <form method ="POST" action = "/animal">
            <h3>Adicionar novo animal:</h3>
            <label for="nome">Nome do animal:</label>
            <input type="text" name="nome">
            <label for="tipo">Tipo do animal:</label>
            <select name="tipo">
                <option value="cachorro">CACHORRO</option>
                <option value="gato">GATO</option>
            </select>
            <input type="hidden" name="proprietario_id" value="{{dono.proprietario_id}}">
            <input type="submit" value="ADICIONAR">
        </form>
    </div>
   
</div>